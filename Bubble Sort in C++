#include<iostream>
using namespace std;

//Bubble Sort Function.
void bubbleSort(int arr[],int size){
	for(int i=0;i<size-1;i++){
		for(int j=0;j<size-i-1;j++){
			if(arr[j]>arr[j+1]){
				int a = arr[j];
				arr[j] = arr[j+1];
				arr[j+1] = a;
			}
		}
	}
}

//Displaying sorted array in ascending order.
void display(int arr[],int size){
	cout<<"Sorted array is: ";
	for(int i=0;i<size;i++){
		cout<<" "<<arr[i];
	  }
	cout<<endl;
}

int main(){
	
	int n;
	cout<<"Enter the size: "; //Taking the size of the array as user input
	cin>>n;
	
	int arr[n];
	cout<<"Enter the array elements: ";  // Taking the array as user input.
	for(int i=0;i<n;i++){
		cin>>arr[i];
  }
	
	bubbleSort(arr,n); //Function of bubble sort called recursively to sort the array.
	display(arr,n); // It will display the array in sorted order(ascending order).
}
